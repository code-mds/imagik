<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<AnchorPane fx:id="anchorPane" prefHeight="600.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.SideBarController">

    <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <TextField fx:id="searchField" promptText="%search" HBox.hgrow="SOMETIMES" />

        <SplitPane dividerPositions="0.5" orientation="VERTICAL">
            <fx:include source="Thumbnail.fxml" />
            <fx:include source="Metadata.fxml" />
        </SplitPane>
    </VBox>


</AnchorPane>
