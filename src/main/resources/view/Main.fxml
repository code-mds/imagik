<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.172-ea"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainController">
    <VBox  AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0">

        <fx:include source="MainMenu.fxml"/>

        <SplitPane dividerPositions="0.4" VBox.vgrow="ALWAYS">
            <fx:include source="SideBar.fxml" SplitPane.resizableWithParent="true" />
            <fx:include source="ContentArea.fxml" SplitPane.resizableWithParent="true" />
        </SplitPane>

    </VBox>
</AnchorPane>
