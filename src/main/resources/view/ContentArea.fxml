<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Separator?>

<?import org.kordamp.ikonli.javafx.FontIcon?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ContentAreaController">
    <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <HBox VBox.vgrow="SOMETIMES">
            <ScrollPane fx:id="scrollPane" styleClass="edge-to-edge" HBox.hgrow="SOMETIMES">
                <ImageView fx:id="imageView" preserveRatio="true" />
            </ScrollPane>
            <VBox fx:id="editPane" spacing="5.0" visible="${controller.showEditPane}" managed="${controller.showEditPane}" prefWidth="150">
                <Button disable="${controller.disableEdit}" mnemonicParsing="false" onAction="#blackWhite" text="%grayscale" prefWidth="${editPane.width}" alignment="BASELINE_LEFT" >
                    <tooltip><Tooltip text="%grayscale" /></tooltip>
                    <graphic>
                        <FontIcon iconLiteral="mdi-invert-colors" />
                    </graphic>
                </Button>

                <Separator/>

                <Button disable="${controller.disableEdit}" mnemonicParsing="false" onAction="#rotateLeft" text="%rotate_left" prefWidth="${editPane.width}" alignment="BASELINE_LEFT" >
                    <tooltip><Tooltip text="%rotate_left" /></tooltip>
                    <graphic>
                        <FontIcon iconLiteral="mdi-rotate-left" />
                    </graphic>
                </Button>
                <Button disable="${controller.disableEdit}" mnemonicParsing="false" onAction="#rotateRight" text="%rotate_right" prefWidth="${editPane.width}" alignment="BASELINE_LEFT" >
                    <tooltip><Tooltip text="%rotate_right" /></tooltip>
                    <graphic>
                        <FontIcon iconLiteral="mdi-rotate-right" />
                    </graphic>
                </Button>
                <Button disable="${controller.disableEdit}" mnemonicParsing="false" onAction="#flipHorizontally" text="%flip_horizontally" prefWidth="${editPane.width}" alignment="BASELINE_LEFT" >
                    <tooltip><Tooltip text="%flip_horizontally" /></tooltip>
                    <graphic>
                        <FontIcon iconLiteral="mdi-swap-horizontal" />
                    </graphic>
                </Button>
                <Button disable="${controller.disableEdit}" mnemonicParsing="false" onAction="#flipVertically" text="%flip_vertically" prefWidth="${editPane.width}" alignment="BASELINE_LEFT" >
                    <tooltip><Tooltip text="%flip_vertically" /></tooltip>
                    <graphic>
                        <FontIcon iconLiteral="mdi-swap-vertical" />
                    </graphic>
                </Button>

                <Button disable="${controller.disableEdit}" mnemonicParsing="false" onAction="#resize" text="%resize" prefWidth="${editPane.width}" alignment="BASELINE_LEFT" >
                    <tooltip><Tooltip text="%resize" /></tooltip>
                    <graphic>
                        <FontIcon iconLiteral="mdi-move-resize-variant" />
                    </graphic>
                </Button>

                <Separator/>

                <Button disable="${controller.disableEdit}" mnemonicParsing="false" onAction="#resetChanges" text="%reset" prefWidth="${editPane.width}" alignment="BASELINE_LEFT" >
                    <tooltip><Tooltip text="%reset" /></tooltip>
                    <graphic>
                        <FontIcon iconLiteral="mdi-undo" />
                    </graphic>
                </Button>
                <Button disable="true" mnemonicParsing="false" onAction="#saveChanges" text="%save_changes"  prefWidth="${editPane.width}" alignment="BASELINE_LEFT" >
                    <tooltip><Tooltip text="%save_changes" /></tooltip>
                    <graphic>
                        <FontIcon iconLiteral="mdi-content-save" />
                    </graphic>
                </Button>
                <padding>
                   <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                </padding>
            </VBox>
        </HBox>

    </VBox>
</AnchorPane>
