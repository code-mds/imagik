<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ContentAreaController">
    <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <ToolBar>
            <Button mnemonicParsing="false" onAction="#zoomIn">
                <tooltip><Tooltip text="Zoom In" /></tooltip>
                <graphic>
                    <FontAwesomeIcon iconName="SEARCH_PLUS" size="1.5em" />
                </graphic>
            </Button>
            <Button mnemonicParsing="false" onAction="#zoomOut">
                <tooltip><Tooltip text="Zoom Out" /></tooltip>
                <graphic>
                    <FontAwesomeIcon iconName="SEARCH_MINUS" size="1.5em" />
                </graphic>
            </Button>


            <Pane prefWidth="20.0" HBox.hgrow="SOMETIMES" />

            <Button mnemonicParsing="false" onAction="#resize">
                <tooltip><Tooltip text="Scala" /></tooltip>
                <graphic>
                    <FontAwesomeIcon iconName="COMPRESS" size="1.5em" />
                </graphic>
            </Button>
            <Button mnemonicParsing="false" onAction="#blackWhite">
                <tooltip><Tooltip text="Bianco/Nero" /></tooltip>
                <graphic>
                    <FontAwesomeIcon iconName="ADJUST" size="1.5em" />
                </graphic>
            </Button>
            <Button mnemonicParsing="false" onAction="#rotateLeft">
                <tooltip><Tooltip text="Routa a sinstra" /></tooltip>
                <graphic>
                    <FontAwesomeIcon iconName="ROTATE_LEFT" size="1.5em" />
                </graphic>
            </Button>
            <Button mnemonicParsing="false" onAction="#rotateRight">
                <tooltip><Tooltip text="Ruota a destra" /></tooltip>
                <graphic>
                    <FontAwesomeIcon iconName="ROTATE_RIGHT" size="1.5em" />
                </graphic>
            </Button>

            <Pane prefWidth="20.0" HBox.hgrow="SOMETIMES" />

            <Button mnemonicParsing="false" onAction="#resetChanges">
                <tooltip><Tooltip text="Reset" /></tooltip>
                <graphic>
                    <FontAwesomeIcon iconName="ARROW_CIRCLE_LEFT" size="1.5em" />
                </graphic>
            </Button>
            <Button mnemonicParsing="false" onAction="#saveChanges">
                <tooltip><Tooltip text="Salva" /></tooltip>
                <graphic>
                    <FontAwesomeIcon iconName="SAVE" size="1.5em" />
                </graphic>
            </Button>

        </ToolBar>

        <ScrollPane fx:id="scrollPane" styleClass="edge-to-edge" VBox.vgrow="SOMETIMES">
            <ImageView fx:id="imageView" fitHeight="${scrollPane.height}" fitWidth="${scrollPane.width}" preserveRatio="true" />
        </ScrollPane>

    </VBox>
</AnchorPane>
